<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_24">

            <FrameLayout
                android:id="@+id/flAvatar"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/ivAvatarBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_avatar_default" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_16"
                        android:drawableEnd="@drawable/ic_edit"
                        android:gravity="center"
                        android:text="编辑头像"
                        android:textColor="#212121" />
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/tvResume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_fun"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_edit"
                android:ellipsize="end"
                android:focusable="true"
                android:lines="1"
                android:paddingBottom="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_32"
                android:paddingStart="@dimen/dp_32"
                android:paddingTop="@dimen/dp_16"
                android:text="@string/default_resume" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFAFAFA"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teacher_info_name"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvTeacherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:lines="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/llTeacherPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_fun"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teacher_info_phone"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:lines="1"
                    android:text="@string/edit" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16" />

            <LinearLayout
                android:id="@+id/llBindingAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_fun"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/binding"
                    android:textColor="#212121" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16" />

            <TextView
                android:id="@+id/tvChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_fun"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/dp_16"
                android:text="@string/teacher_info_change"
                android:textColor="#212121" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:background="@color/line" />

            <TextView
                android:id="@+id/tvQuit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_fun"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/dp_16"
                android:text="@string/teacher_info_quit"
                android:textColor="#212121" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
