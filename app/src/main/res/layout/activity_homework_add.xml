<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFAFA"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/homework_title" />

    <com.turingoal.common.widget.ClearEditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_ll_solid"
        android:gravity="top|start"
        android:maxLength="30"
        android:minHeight="@dimen/dp_64"
        android:padding="@dimen/dp_4"
        android:textColor="#616161" />

    <TextView
        android:id="@+id/tvTitleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="0/30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:text="@string/homework_content" />

    <com.turingoal.common.widget.ClearEditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_ll_solid"
        android:gravity="top|start"
        android:maxLength="140"
        android:minHeight="@dimen/dp_150"
        android:padding="@dimen/dp_4"
        android:textColor="#616161" />

    <TextView
        android:id="@+id/tvContentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="0/140" />

</LinearLayout>